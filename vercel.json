{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/go/(.*)", "dest": "/go/index.html" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/onboarding", "dest": "/onboarding/index.html" },
    { "src": "/success", "dest": "/success/index.html" },
    { "src": "^/$", "dest": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/generate-collages",
      "schedule": "30 8 * * *"
    }
  ]
}
