{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "tenant/**/*.html", "use": "@vercel/static" },
    { "src": "onboarding/**/*.html", "use": "@vercel/static" },
    { "src": "success/**/*.html", "use": "@vercel/static" },
    { "src": "**/*.jpg", "use": "@vercel/static" },
    { "src": "**/*.png", "use": "@vercel/static" }
  ],
  "routes": [

    /* TENANT SITES — wildcard subdomains */
    {
      "src": "^/(.*)$",
      "dest": "/tenant/index.html",
      "has": [
        {
          "type": "host",
          "value": "*.bagthatthangup.com"
        }
      ]
    },

    /* CLEAN ITEM ROUTER — marketing domain ONLY */
    {
      "src": "^/item/(.*)$",
      "dest": "/index.html",
      "has": [
        {
          "type": "host",
          "value": "bagthatthangup.com"
        }
      ]
    },

    /* MAIN MARKETING HOMEPAGE */
    {
      "src": "^/$",
      "dest": "/index.html",
      "has": [
        {
          "type": "host",
          "value": "bagthatthangup.com"
        }
      ]
    },

    /* SYSTEM ROUTES */
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "^/onboarding/?$", "dest": "/onboarding/index.html" },
    { "src": "^/success/?$", "dest": "/success/index.html" },
    { "src": "^/tenant/?$", "dest": "/tenant/index.html" }

  ]
}
