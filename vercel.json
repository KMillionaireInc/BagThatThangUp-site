{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/",
      "has": [
        { "type": "host", "value": "^[^.]+\\.bagthatthangup\\.com$" }
      ],
      "destination": "/tenant/index.html"
    },
    {
      "source": "/(.*)",
      "has": [
        { "type": "host", "value": "^[^.]+\\.bagthatthangup\\.com$" }
      ],
      "destination": "/tenant/$1"
    },
    { "source": "/onboarding(.*)", "destination": "/onboarding/index.html" },
    { "source": "/success(.*)", "destination": "/success/index.html" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/index.html" }
  ]
}
