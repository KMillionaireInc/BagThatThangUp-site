{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/stripe/success", "destination": "/onboarding/stripe-success.html" },
    { "source": "/start", "destination": "/onboarding/index.html" },
    { "source": "/", "destination": "/onboarding/index.html" },

    // let these folders serve their own files if hit directly
    { "source": "/onboarding/:path*", "destination": "/onboarding/:path*" },
    { "source": "/tenant/:path*", "destination": "/tenant/:path*" },

    // catch-all: anything else (e.g. subdomains) goes to the tenant app
    { "source": "/:path*", "destination": "/tenant/index.html" }
  ]
}
