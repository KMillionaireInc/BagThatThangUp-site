{
  "cleanUrls": true,
  "trailingSlash": false,
  "static": {
    "include": ["tenant/**", "onboarding/**", "success/**", "assets/**", "index.html"]
  },
  "rewrites": [
    {
      "source": "/",
      "has": [
        { "type": "host", "value": "^(?<sub>[a-z0-9-]+)\\.bagthatthangup\\.com$" }
      ],
      "destination": "/tenant/index.html"
    },
    {
      "source": "/(.*)",
      "has": [
        { "type": "host", "value": "^(?<sub>[a-z0-9-]+)\\.bagthatthangup\\.com$" }
      ],
      "destination": "/tenant/$1"
    },
    {
      "source": "/onboarding",
      "destination": "/onboarding/index.html"
    },
    {
      "source": "/success",
      "destination": "/success/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
